{
  "name": "@hackages/ngxerrors",
  "version": "7.0.0",
  "description": "A declarative validation module for reactive forms forked from UltimateAngular/ngx-errors",
  "author": "Hackages",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/hackages/ngx-errors.git",
    "type": "git"
  },
  "scripts": {
    "build": "yarn run clean && yarn run copy && yarn run compile",
    "clean": "rimraf dist && mkdir -p dist",
    "compile": "yarn run ngc && yarn run rollup",
    "copy": "cp src/package.json dist/package.json && cp README.md dist/README.md",
    "example": "webpack-dev-server --inline --hot",
    "prestart": "yarn run clean && yarn run copy",
    "start": "nodemon --exec yarn run compile -e ts --watch src",
    "rollup": "rollup -c rollup.config.js >/dev/null 2>&1",
    "ngc": "ngc -p tsconfig.json",
    "test": "karma start --single-run",
    "test:watch": "karma start"
  },
  "devDependencies": {
    "@angular/compiler": "7.0.0",
    "@angular/compiler-cli": "7.0.0",
    "@types/jasmine": "2.8.9",
    "@types/karma": "3.0.0",
    "@types/node": "^10.12.0",
    "angular2-template-loader": "0.6.2",
    "awesome-typescript-loader": "5.2.1",
    "file-loader": "2.0.0",
    "html-loader": "0.5.5",
    "jasmine-core": "3.2.1",
    "karma": "3.1.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "3.0.5",
    "node-sass": "4.9.4",
    "nodemon": "1.18.4",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "rollup": "0.66.6",
    "sass-loader": "7.1.0",
    "typescript": "3.1.3",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "4.22.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "3.1.10"
  },
  "dependencies": {
    "@angular/animations": "7.0.0",
    "@angular/common": "7.0.0",
    "@angular/core": "7.0.0",
    "@angular/forms": "7.0.0",
    "@angular/http": "7.0.0",
    "@angular/platform-browser": "7.0.0",
    "@angular/platform-browser-dynamic": "7.0.0",
    "@angular/router": "7.0.0",
    "core-js": "2.5.7",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.3.3",
    "tslib": "1.9.3",
    "zone.js": "0.8.26"
  }
}
